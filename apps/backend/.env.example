# Sicherheit
DJANGO_SECRET_KEY=...  # Hier einen langen, zufälligen String generieren!
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS / CSRF (Wichtig für Frontend-Zugriff!)
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200,https://your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200,https://your-domain.com

# Datenbank (für dev.dominicseel.dev)
DB_ENGINE=postgresql
DB_NAME=dev_dominicseel_dev
DB_USER=dominicseel_app
DB_PASSWORD=DEIN_DATENBANK_PASSWORT  # Das PW, das du bei 'createuser' vergeben hast
DB_HOST=host.docker.internal
DB_PORT=5432
