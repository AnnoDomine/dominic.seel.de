# Django
# ------------------------------------------------------------------------------
# SECURITY WARNING: keep the secret key used in production secret!
DJANGO_SECRET_KEY=replace-me-with-a-secure-random-key

# SECURITY WARNING: don't run with debug turned on in production!
DJANGO_DEBUG=False

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,example.com

# Database
# ------------------------------------------------------------------------------
# Available options: sqlite3, mysql
DB_ENGINE=sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Static Files
# ------------------------------------------------------------------------------
# STATIC_ROOT path for collectstatic (usually set in settings.py, but can be overridden)
# DJANGO_STATIC_ROOT=

# CORS
# ------------------------------------------------------------------------------
# Comma-separated list of allowed and trusted origins
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200
CSRF_TRUSTED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200
