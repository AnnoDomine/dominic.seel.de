{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "./venv/bin/python manage.py runserver"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "./venv/bin/python manage.py migrate"
      }
    },
    "makemigrations": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "./venv/bin/python manage.py makemigrations"
      }
    },
    "createsuperuser": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "./venv/bin/python manage.py createsuperuser"
      }
    },
    "shell": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "./venv/bin/python manage.py shell"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "ruff check ."
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "ruff format ."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "./venv/bin/python manage.py test"
      }
    }
  },
  "tags": ["scope:backend", "type:app"]
}
