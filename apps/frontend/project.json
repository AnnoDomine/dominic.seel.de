{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend/src",
  "projectType": "application",
  "tags": ["scope:frontend", "type:app"],
  "targets": {
    "test watch": {
      "executor": "@nx/vitest:test",
      "options": {
        "config": "apps/frontend/vite.config.ts"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "biome-lint": {
      "executor": "@gitopslovers/nx-biome:biome-lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/frontend/**"],
        "write": false,
        "unsafe": false
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "vite preview --host 0.0.0.0 --port 4300"
      },
      "dependsOn": ["build"]
    }
  }
}
